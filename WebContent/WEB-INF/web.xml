<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd"> 
<web-app> 
	<display-name>Bonjour :)</display-name> 
	<servlet> 
		<servlet-name>CreationUtilisateur</servlet-name> 
		<servlet-class>servlets.utilisateur.ServletCreationUtilisateur</servlet-class>
	</servlet>
	<servlet> 
		<servlet-name>Login</servlet-name> 
		<servlet-class>servlets.authentification.ServletLogin</servlet-class>
	</servlet>
	<servlet> 
		<servlet-name>Logout</servlet-name> 
		<servlet-class>servlets.authentification.ServletLogout</servlet-class>
	</servlet>
	<servlet> 
		<servlet-name>SupprimerAmi</servlet-name> 
		<servlet-class>servlets.amis.ServletSupprimerAmi</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>AjouterAmi</servlet-name> 
		<servlet-class>servlets.amis.ServletAjouterAmi</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>ListerAmis</servlet-name> 
		<servlet-class>servlets.amis.ServletListerAmis</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>AjouterCommentaire</servlet-name> 
		<servlet-class>servlets.commentaire.ServletAjouterCommentaire</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>SupprimerCommentaire</servlet-name> 
		<servlet-class>servlets.commentaire.ServletSupprimerCommentaire</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>ListerCommentaires</servlet-name> 
		<servlet-class>servlets.commentaire.ServletListerCommentaires</servlet-class> 
	</servlet>
	
	
	<servlet-mapping> 
		<servlet-name>CreationUtilisateur</servlet-name> 
		<url-pattern>/services/utilisateur/creationUtilisateur</url-pattern>
	</servlet-mapping> 
	<servlet-mapping>
		<servlet-name>Login</servlet-name> 
		<url-pattern>/services/authentification/login</url-pattern>
	</servlet-mapping> 
	<servlet-mapping>
		<servlet-name>Logout</servlet-name> 
		<url-pattern>/services/authentification/logout</url-pattern>
	</servlet-mapping> 
	<servlet-mapping>
		<servlet-name>SupprimerAmi</servlet-name> 
		<url-pattern>/services/amis/supprimerAmis</url-pattern> 
	</servlet-mapping> 
	<servlet-mapping>
		<servlet-name>AjouterAmi</servlet-name> 
		<url-pattern>/services/amis/ajouterAmi</url-pattern> 
	</servlet-mapping> 
	<servlet-mapping>
		<servlet-name>ListerAmis</servlet-name> 
		<url-pattern>/services/amis/listerAmis</url-pattern> 
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AjouterCommentaire</servlet-name> 
		<url-pattern>/services/commentaire/ajouterCommentaire</url-pattern> 
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SupprimerCommentaire</servlet-name> 
		<url-pattern>/services/commentaire/supprimerCommentaire</url-pattern> 
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListerCommentaires</servlet-name> 
		<url-pattern>/services/commentaire/listerCommentaires</url-pattern> 
	</servlet-mapping>
	
	<welcome-file-list>
        <welcome-file>html/index.html</welcome-file>
        <welcome-file>html/index.htm</welcome-file>
        <welcome-file>html/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>

